@model IEnumerable<RedMood.Models.Moods>

@{
    ViewBag.Title = "RedMood";
}

function(){
}

<h2>Welcome to Redmind!</h2>
<h3>How do you feel today?</h3>
<table class="table">
    <tr>   
        <th><button type="submit" name="someName" value="1" onclick="btn_click"><img src="~/content/Images/happysmiley.jpg" alt="SomeAlternateText"></button></th>
        <th><button type="submit" name="someName" value="2"><img src="~/content/Images/messi.jpg" alt="SomeAlternateText"></button></th>

        <th><a href="@Url.Action("Increase", "Moods", new { id = 1 })" /><img src="~/content/Images/happysmiley.jpg"/></th>

        
    </tr>
    </table>

    <p>
        @Html.ActionLink("Create New", "Increase", new { id = 1 })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td> 
                    @Html.DisplayForModel(item.Description)

                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
